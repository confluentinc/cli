[Unit]
Description=Command Line Interface for managing Confluent Platform
Documentation=https://docs.confluent.io/current/cli/
After=network.target confluent-control-center.target confluent-kafka.target confluent-kafka-rest.target confluent-ksqldb.target confluent-schema-registry.target

[Service]
Type=simple
User=cp-cli
Group=confluent
Environment="LOG_DIR=/var/log/confluent/cli"
ExecStart=/usr/bin/confluent
TimeoutStopSec=180
Restart=no
